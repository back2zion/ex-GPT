# ex-GPT 프로젝트 환경변수 설정

# 서버 설정
SERVER_HOST=localhost
SERVER_PORT=5001
DEBUG=False

# 데이터베이스 설정
VECTOR_DB_HOST=localhost
VECTOR_DB_PORT=6333
QDRANT_COLLECTION_NAME=exgpt_documents

# 오픈소스 LLM 설정 (vLLM)
# Qwen2.5-7B 모델 사용 (GPU/CPU 모두 지원)
MODEL_NAME=Qwen/Qwen2.5-7B-Instruct
VLLM_BASE_URL=http://localhost:8000

# GPU 설정 (H100 8대 환경)
CUDA_VISIBLE_DEVICES=0,1,2,3,4,5,6,7
VLLM_TENSOR_PARALLEL_SIZE=8
VLLM_GPU_MEMORY_UTILIZATION=0.85
VLLM_MAX_MODEL_LEN=8192
VLLM_MAX_NUM_SEQS=256

# CPU 대체 설정 (GPU 없는 환경용)
VLLM_CPU_ONLY=False
VLLM_WORKER_USE_RAY=True

# RAGFlow 설정
RAGFLOW_HOST=http://localhost:8080
RAGFLOW_API_KEY=your_ragflow_api_key_here
RAGFLOW_ASSISTANT_ID=your_assistant_id_here

# DSRAG 설정 (대안 RAG 엔진)
DSRAG_API_URL=http://localhost:8081/v1/chat/

# 로깅 설정
LOG_LEVEL=INFO
LOG_FILE=logs/exgpt.log
